<resources>
    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!--no specificed style item-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:listDivider">@drawable/default_line</item>
    </style>

    <!-- StatusBar为透明色 -->
    <style name="ColorTranslucentTheme" parent="@style/AppTheme" >
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CollapsingToolbarTitleStyle.About" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>
</resources>
